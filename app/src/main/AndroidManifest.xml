<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ivaylok.github">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".application.RepoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RepoActivity"
            android:label="@string/title_activity_repo"
            android:parentActivityName=".ui.GithubActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ivaylok.github.ui.GithubActivity" />
        </activity>
        <activity
            android:name=".ui.GithubActivity"
            android:label="@string/title_activity_github" />
        <activity android:name=".ui.OverviewActivity"/>
    </application>

</manifest>